.userInfo{
  position: fixed;
  z-index: 9;
  width: 100%;
  border-bottom: 1px solid #eeeeee;
  height: 80px;
  padding-left: 80px;
  background-color: #fff;
}
.userInfo image{
  width: 52px;
  height: 52px;
  position: absolute;
  left: 20px;
  top: 14px;
}
.userInfo .name{
  margin-top: 16px;
  margin-bottom: 4px;
}
.userInfo text{
  font-size: 14px;
  color: #ccc;
}
.list{
  position: relative;
  padding-top: 134px;
  z-index: 1;
}
.touch-item {
  font-size: 14px;
  justify-content: space-between;
  overflow: hidden;
  height: 54px;
  border-bottom: 1px solid #eee;
  margin-left: 20px;
  display: flex;
  align-items: center;
}
.content {
  width: 100%;
  height: 54px;
  border-bottom: 1px solid bue;
  display: flex;
  align-items: center;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px
}
.del {
 background-color: #e70000;
 width: 60px;
 text-align: center;
 height: 54px;
 display: flex;
 flex-direction: column;
 justify-content: center;
 color: #fff;
 -webkit-transform: translateX(90px);
 transform: translateX(90px);
 -webkit-transition: all 0.4s;
 transition: all 0.4s;
}
.touch-move-active .content,
.touch-move-active .del {
 -webkit-transform: translateX(0);
 transform: translateX(0);
}
.list .touch-item .content view{
  width: 26px;
  height: 26px;
  line-height: 26px;
  text-align: center;
  margin-right: 20px;
  display: inline-block;
  background-color: #4dc1ad;
  border-radius: 50%;
  -webkit-border-radius: 50%;
  color: #FFFFFF; 
}
.share{
  position: fixed;
  z-index: 8;
  width: 100%;
  padding-top: 80px;
  line-height: 54px;
  margin-left: 20px;
  border-bottom: 1px solid #eee;
  color: #9b9b9b;
  background-color: #fff;
}
.pop{
  width: 100%;
  position: fixed;
  z-index: 10;
  bottom: 0;
  padding-bottom: 30px;
  padding-top: 20px;
  text-align: center;
  background-color: #FFFFFF;
}
.pop image{
  width: 40px;
  height: 40px;
  margin-bottom: 10px;
}