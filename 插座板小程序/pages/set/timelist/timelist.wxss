page {
  background-color: #f7f7f7;
}
.container {
  margin-top: 10px;
  min-height: 100%;
  background-color: #fff;
}
.touch-item {
  border-bottom: 1px solid #EEEEEE;
  overflow: hidden;
  height: 80px;
  margin-left: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content {
  width: 100%;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px
}
.content .li{
  border-bottom: 1px solid #EEEEEE;
  overflow: hidden;
  height: 80px;
  padding-right: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content .li text:first-child{
  font-size: 20px;
  color: #333;
}
.content .li view{
  font-size: 12px;
}
.content .li text:last-child{
  font-size: 12px;
  color: #4dc1ad;
}
.del {
  background-color: #e70000;
  height: 100%;
  width: 60px;
  display: flex;
  text-align: center;
  flex-direction: column;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.touch-move-active .content,
.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}
.pop{
  width: 100%;
  position: fixed;
  z-index: 10;
  bottom: 0;
  padding-bottom: 30px;
  padding-top: 20px;
  text-align: center;
}
.pop image{
  width: 40px;
  height: 40px;
  margin-bottom: 10px;
}